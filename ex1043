#include <stdio.h>
#include <stdlib.h>

int main()
{
    double a, b, c;
    scanf("%lf",&a);
    scanf("%lf",&b);
    scanf("%lf",&c);
    if ((c<(a+b))&&(b<(c+a))&&(a<(b+c))){
        printf("Perimetro = %.1lf\n",a+b+c);
    }
    else {
        printf("Area = %.1lf\n",(a+b)*c/2);
    }
    return 0;
}
